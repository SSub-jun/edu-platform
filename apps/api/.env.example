# API 서버 설정
API_PORT=4000

# 데이터베이스 설정
DATABASE_URL=postgresql://edu:edu@localhost:5432/edudb?schema=public

# JWT 설정
JWT_SECRET=dev_jwt_secret_change_me
JWT_EXPIRES=15m
REFRESH_EXPIRES=7d

# 인증 모드 설정
AUTH_MODE=mock

# 본인인증 설정
VERIFY_ON_COURSE_START=false
VERIFY_PROVIDER=mock

# SMS 설정 (Solapi)
SMS_PROVIDER=mock
SOLAPI_API_KEY=your_solapi_api_key
SOLAPI_API_SECRET=your_solapi_api_secret
SMS_SENDER_ID=0312345678

# 환경 설정
NODE_ENV=development
