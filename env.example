# 본인인증 설정
VERIFY_ON_COURSE_START=false
VERIFY_PROVIDER=mock

# 데이터베이스 설정
DATABASE_URL="postgresql://username:password@localhost:5432/edu_platform"

# JWT 설정
JWT_SECRET="your-jwt-secret-key"
JWT_EXPIRES_IN="24h"

# OTP 설정
OTP_CODE_TTL_SECONDS=300
OTP_RESEND_INTERVAL_SECONDS=30
OTP_DAILY_LIMIT=10
AUTH_OTP_JWT_SECRET=replace-with-random-32b

# SMS 설정
SMS_PROVIDER=mock
SMS_SENDER_ID=EDU-PLATFORM

# SOLAPI 설정 (SMS_PROVIDER=solapi일 때 필요)
# SOLAPI 계정에서 발급받은 API Key, Secret, 발신번호
SOLAPI_API_KEY=your-solapi-api-key
SOLAPI_API_SECRET=your-solapi-api-secret
SOLAPI_FROM_NUMBER=01012345678

# 서버 설정
PORT=3000
NODE_ENV=development

# Portal Exam System Environment Variables
PORTAL_DATABASE_URL="postgresql://postgres:password@localhost:5432/edudb?schema=public"
PORTAL_JWT_SECRET="replace-with-32b-secret-key-for-portal-system"
PORTAL_ADMIN_USER="admin"
PORTAL_ADMIN_PASS="change-me"
PORTAL_BASE_URL="https://exam.example.com"
PORTAL_SESSION_CODE_LEN=8
PORTAL_PASSING_SCORE=60
PORTAL_DEFAULT_QUESTION_COUNT=20
PORTAL_MIN_CHOICES_PER_QUESTION=3
PORTAL_MAX_CHOICES_PER_QUESTION=10
PORTAL_SEED_QUESTION_COUNT=60
